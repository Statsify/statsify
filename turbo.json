{
  "$schema": "https://turborepo.org/schema.json",
  "remoteCache": {
    "signature": true
  },
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "build:watch": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build:watch"]
    },
    "test:types": {
      "outputs": [],
      "dependsOn": ["^test:types"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["build", "^test"]
    },
    "test:coverage": {
      "outputs": ["coverage"],
      "dependsOn": ["build", "^test:coverage"]
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^lint"]
    }
  }
}

{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true,
      "importAssertions": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true,
      "react": {
        "runtime": "automatic",
        "importSource": "@statsify/rendering",
        "throwIfNamespace": false
      },
      "optimizer": {
        "simplify": true,
        "jsonify": {
          "minCost": 2048
        }
      }
    },
    "target": "es2022",
    "keepClassNames": true,
    "loose": false,
    "externalHelpers": false,
    "preserveAllComments": false,
    "experimental": {
      "keepImportAssertions": true
    }
  },
  "module": {
    "type": "es6",
    "strict": true,
    "strictMode": true,
    "lazy": false,
    "noInterop": false
  },
  "sourceMaps": true
}

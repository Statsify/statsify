{
  "name": "statsify",
  "description": "",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "git-cz": "4.8.0",
    "prettier": "2.5.1",
    "turbo": "1.0.28",
    "typescript": "4.5.4"
  },
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "commit": "git-cz --disable-emoji"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {
        "dependsOn": []
      }
    }
  }
}

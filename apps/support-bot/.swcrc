{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true,
      "react": {
        "runtime": "automatic",
        "importSource": "@statsify/rendering"
      },
      "optimizer": {
        "simplify": true,
        "jsonify": {
          "minCost": 2048
        }
      }
    },
    "target": "es2022",
    "keepClassNames": true,
    "loose": false,
    "externalHelpers": true,
    "preserveAllComments": false
  },
  "module": {
    "type": "commonjs",
    "strict": true,
    "strictMode": true,
    "lazy": false,
    "noInterop": false
  },
  "sourceMaps": true
}
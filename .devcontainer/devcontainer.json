{
  "name": "Statsify",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "extensions": [
      "dbaeumer.vscode-eslint",
      "esbenp.prettier-vscode",
      "vivaxy.vscode-conventional-commits",
      "mikestead.dotenv",
      "ms-azuretools.vscode-docker",
      "lokalise.i18n-ally"
    ]
  },
  // mount local .pnpm-store to /home/node/.pnpm-store
  "mounts": [
    "source=${localWorkspaceFolder}/.pnpm-store,target=/home/node/.pnpm-store,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--privileged"
  ],
  "containerEnv": {
    "USE_POLLING": "true"
  },
  "remoteUser": "node",
  "postCreateCommand": "pnpm install",
  "postStartCommand": "sudo /etc/init.d/redis-server start && git config core.autocrlf true && pnpm scripts api-key --nonInteractiveKeyCreation",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}